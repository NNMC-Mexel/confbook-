{
  "kind": "collectionType",
  "collectionName": "rooms",
  "info": {
    "singularName": "room",
    "pluralName": "rooms",
    "displayName": "Room",
    "description": "Conference rooms"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "capacity": {
      "type": "integer",
      "default": 10
    },
    "description": {
      "type": "text"
    },
    "color": {
      "type": "string",
      "default": "#3B82F6"
    },
    "bookings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::booking.booking",
      "mappedBy": "room"
    }
  }
}
